source 'http://rubygems.org'


eval_gemfile File.expand_path(File.join(File.dirname(__FILE__), "../bin/Gemfile"))

gem 'rails', '4.2'

# data modules
gem 'json', '1.7.7'
gem 'jbuilder'
gem 'rubyzip', '~> 1.2.0'
gem 'tzinfo-data'

# database modules
gem 'mongoid', '~> 5.1'
gem 'paperclip', '~> 4.3'
gem 'mongoid-paperclip', require: 'mongoid_paperclip'

# R
gem 'rserve-simpler'

# net-*
gem 'net-http-persistent'
gem 'net-scp'
gem 'net-ssh'
gem 'net-sftp'

# javascript
gem 'libv8', platforms: :ruby
gem 'execjs'
gem 'therubyracer', platforms: :ruby

# other useful gems
gem 'parallel'
gem 'sys-filesystem'

# web ui
# gem 'will_paginate'
gem 'jquery-rails'
gem 'kaminari'
gem 'kaminari-mongoid'

# job queuing
gem 'delayed_job_mongoid'
gem 'daemons'

# http(s) requests
gem 'faraday' # TODO: can this be deprecated?

# Gems used only for assets and not required
# in production environments by default.
gem 'sass'
gem 'coffee-rails'
gem 'bootstrap-sass'
gem 'sass-rails'
gem 'uglifier'
gem 'sprockets-rails'

# For workers - and other dependencies for measures
gem 'openstudio-workflow', github: 'NREL/OpenStudio-workflow-gem', branch: 'osw-working'
# gem 'openstudio-workflow', github: 'NREL/OpenStudio-workflow-gem', ref: 'd04d5f'
gem 'openstudio-standards', '0.1.4'
gem 'msgpack', '~> 1.0'

gem 'multi_json'
gem 'oj'
gem 'rest-client'
gem 'libxml-ruby', :platforms => :ruby
gem 'os'

if RUBY_PLATFORM =~ /win/ || RUBY_PLATFORM =~ /mingw/
  gem 'tzinfo-data'
end

group :development, :test do
  gem 'sextant' # navigate to /rails/routes to see routes
  gem 'better_errors'
  gem 'meta_request'

  gem 'coveralls', require: false
  gem 'ruby-prof', '~> 0.15'
  gem 'capybara'
  gem 'selenium-webdriver'
  gem 'rspec', '~> 3.4'
  gem 'rspec-retry'
  gem 'rspec-rails'

  gem 'rubocop', require: false
  gem 'rubocop-checkstyle_formatter', require: false

  gem 'mongoid-rspec'
  gem 'rspec-html-matchers'
  gem 'factory_girl_rails'
  gem 'ci_reporter'

  # these two openstudio gems are needed for starting up the cluster
  # and running the analysis in the integration tests
  gem 'openstudio-aws', '~> 0.4'
  gem 'openstudio-analysis', '1.0.0.pat2'
end
